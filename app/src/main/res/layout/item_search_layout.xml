<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cvDetailsContainer"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/leftAlignment"
        android:layout_marginEnd="@dimen/rightAlignment"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginBottom="@dimen/dp_6"
        app:cardCornerRadius="@dimen/dp_10"
        app:cardElevation="@dimen/dp_6"
        android:layout_height="wrap_content">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:paddingStart="@dimen/dp_6"
            android:paddingEnd="@dimen/dp_6"
            android:weightSum="2">

        <ImageView
                android:id="@+id/ivItemImage"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_height="50dp"
                android:layout_marginEnd="@dimen/dp_2"
                android:layout_weight="0.3"
                android:src="@drawable/dog"/>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.53"
                android:layout_marginStart="@dimen/dp_5"
                android:paddingTop="@dimen/dp_6"
                android:paddingBottom="@dimen/dp_6"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/tvTaskName"
                    style="@style/text_medium_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dp_2"
                  />


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_4"
                    android:orientation="horizontal">

                <TextView

                        style="@style/text_small_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:text="@string/Descp"/>
                <TextView
                        android:id="@+id/tvTaskDescription"
                        style="@style/text_small_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:textColor="@color/black"
                />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>