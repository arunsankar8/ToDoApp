<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:id="@+id/cvDetailsContainer"
                                    android:layout_width="match_parent"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_marginStart="@dimen/leftAlignment"
                                    android:layout_marginEnd="@dimen/rightAlignment"
                                    android:layout_marginTop="@dimen/dp_6"
                                    android:layout_marginBottom="@dimen/dp_6"
                                    app:cardCornerRadius="@dimen/dp_10"
                                    app:cardElevation="@dimen/dp_6"
                                    android:layout_height="wrap_content">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:paddingStart="@dimen/dp_6"
            android:paddingEnd="@dimen/dp_6"
            android:weightSum="2">

        <ImageView
                android:id="@+id/ivItemImage"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_height="50dp"
                android:layout_marginEnd="@dimen/dp_2"
                android:layout_weight="0.3"
                android:src="@drawable/dog" />

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.53"
                android:layout_marginStart="@dimen/dp_5"
                android:paddingTop="@dimen/dp_6"
                android:paddingBottom="@dimen/dp_6"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/tvItemName"
                    style="@style/text_medium_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dp_2"
                    android:text="10000332" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1.15"
                        android:layout_height="wrap_content">
                    <TextView
                            android:id="@+id/tvContainerTitle"
                            style="@style/text_small_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="normal"
                            android:textColor="@color/text_color"
                            android:text="@string/txt_container" />

                    <TextView
                            android:id="@+id/tvContainerName"
                            style="@style/text_small_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.85"
                        android:layout_height="wrap_content">
                    <TextView
                            android:id="@+id/tvLocationTitle"
                            style="@style/text_small_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="normal"
                            android:textColor="@color/text_color"
                            android:text="@string/location" />

                    <TextView
                            android:id="@+id/tvLocationName"
                            style="@style/text_small_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                </LinearLayout>




            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_4"
                    android:orientation="horizontal">
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1.15"
                        android:layout_height="wrap_content">
                    <TextView
                            android:id="@+id/tvDateTitle"
                            style="@style/text_small_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="normal"
                            android:textColor="@color/text_color"
                            android:text="@string/txt_date" />

                    <TextView
                            android:id="@+id/tvDateName"
                            style="@style/text_small_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.85"
                        android:layout_height="wrap_content">
                    <TextView
                            android:id="@+id/tvTimeTitle"
                            style="@style/text_small_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="normal"
                            android:textColor="@color/text_color"
                            android:text="@string/txt_time" />

                    <TextView
                            android:id="@+id/tvTimeName"
                            style="@style/text_small_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                </LinearLayout>




            </LinearLayout>


        </LinearLayout>

        <ImageView
                android:id="@+id/ivContinue"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_15"
                android:layout_weight="0.14"

                android:scaleType="fitEnd"
                android:paddingEnd="@dimen/dp_5"
                android:src="@drawable/tower" />
    </LinearLayout>


</android.support.v7.widget.CardView>